<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/training_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ScrollView
        android:id="@+id/scroll_training"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/content_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top small red bar (clicable) -->

            <!-- BotÃ³n grande "+ Nuevo Entrenamiento" -->
            <TextView
                android:id="@+id/btnNewTraining"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_red_button"
                android:gravity="center"
                android:text="+  Nuevo Entrenamiento"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="14dp"/>

            <!-- Two options row (Rutina RÃ¡pida / Temporizador) -->
            <LinearLayout
                android:id="@+id/options_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <com.google.android.material.card.MaterialCardView
                    style="@style/DashboardCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="88dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/opt_rutina_rapida"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rutina RÃ¡pida"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/DashboardCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="88dp"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/opt_temporizador"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temporizador"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Section label -->
            <TextView
                android:id="@+id/label_sugeridos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrenamientos Sugeridos"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>

            <!-- Suggested card 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_sugerido_1"
                style="@style/DashboardCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Entrenamiento RÃ¡pido"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HIIT"
                            android:background="@drawable/bg_badge_training"
                            android:padding="6dp"
                            android:textColor="@color/accentRed"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â± 15 min"
                            android:textColor="#9FA3A7"
                            android:layout_marginEnd="18dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‹ï¸ 8 ejercicios"
                            android:textColor="#9FA3A7"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_comenzar_1"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_red_button_small"
                        android:gravity="center"
                        android:text="â–¶  Comenzar"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Suggested card 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_sugerido_2"
                style="@style/DashboardCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Fuerza Superior"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fuerza"
                            android:background="@drawable/bg_badge_training"
                            android:padding="6dp"
                            android:textColor="@color/accentRed"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â± 45 min"
                            android:textColor="#9FA3A7"
                            android:layout_marginEnd="18dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‹ï¸ 12 ejercicios"
                            android:textColor="#9FA3A7"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_comenzar_2"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_red_button_small"
                        android:gravity="center"
                        android:text="â–¶  Comenzar"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Final empty illustration / call-to-action -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‹ï¸"
                    android:textSize="36sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¡Hora de entrenar!"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona un entrenamiento o crea uno\npersonalizado"
                    android:textColor="#9FA3A7"
                    android:gravity="center"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>