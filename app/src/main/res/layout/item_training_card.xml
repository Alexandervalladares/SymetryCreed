<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/gray_box"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header: Título y fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Icono -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:tint="@color/red_accent"
                android:padding="8dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Entrenamiento" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Título -->
                <TextView
                    android:id="@+id/tvTrainingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rutina de Fuerza"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <!-- Fecha -->
                <TextView
                    android:id="@+id/tvTrainingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Ene 2024, 10:30"
                    android:textColor="@color/textSecondary"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Info: Ejercicios y duración -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Ejercicios -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    android:tint="@color/textSecondary"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Ejercicios" />

                <TextView
                    android:id="@+id/tvExercisesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 ejercicios"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Duración -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    android:tint="@color/textSecondary"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Duración" />

                <TextView
                    android:id="@+id/tvTrainingDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 min"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Botón Iniciar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartTraining"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="▶ Iniciar"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@color/red_accent"
                app:cornerRadius="10dp"
                app:icon="@android:drawable/ic_media_play"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconSize="20dp" />

            <!-- Botón Ver Detalles -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Ver"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/gray_box"
                app:strokeColor="@color/textSecondary"
                app:strokeWidth="1dp"
                app:cornerRadius="10dp"
                app:icon="@android:drawable/ic_menu_info_details"
                app:iconTint="@color/textSecondary"
                app:iconGravity="textStart"
                app:iconSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>