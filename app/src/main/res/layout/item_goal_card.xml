<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/gray_box"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icono/Color -->
        <View
            android:id="@+id/goalIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/goal_icon_background"
            android:layout_marginEnd="16dp" />

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/tvGoalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perder 5kg"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/tvGoalDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 días"
                android:textColor="@color/textSecondary"
                android:textSize="13sp"
                android:layout_marginBottom="12dp" />

            <!-- Barra de progreso -->
            <ProgressBar
                android:id="@+id/progressBarGoal"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="60"
                android:max="100"
                android:progressTint="#3DE1C8"
                android:progressBackgroundTint="#1A1A1A"
                android:layout_marginBottom="8dp" />

            <!-- Progreso texto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGoalProgress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3kg de 5kg"
                    android:textColor="#3DE1C8"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGoalPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60%"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>