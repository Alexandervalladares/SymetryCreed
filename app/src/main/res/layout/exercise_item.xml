<?xml version="1.0" encoding="utf-8"?>
<!-- Item UI que se crea/inserta dinÃ¡micamente en ExercisesActivity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exercise_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvExerciseLabel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Ejercicio"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/btnRemoveExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:textColor="#FF6666"
            android:padding="6dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edtExerciseName"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Nombre del ejercicio"
        android:background="@drawable/bg_card_small"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="#9FA3A7"
        android:layout_marginTop="8dp"/>

    <!-- Row: Series / Reps / Peso -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <!-- Series -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Series: "
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnSeriesMinus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="-" />

            <TextView
                android:id="@+id/tvSeries"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnSeriesPlus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+" />
        </LinearLayout>

        <!-- Reps -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reps: "
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnRepsMinus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="-" />

            <TextView
                android:id="@+id/tvReps"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="10"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnRepsPlus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+" />
        </LinearLayout>
    </LinearLayout>

    <!-- Peso (kg) simple -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso (kg): "
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/edtWeight"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:inputType="numberDecimal"
            android:ems="6"
            android:background="@drawable/bg_card_small"
            android:padding="6dp"
            android:textColor="@android:color/white"
            android:text="0" />
    </LinearLayout>

</LinearLayout>