<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTimerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temporizador"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tiempo Display -->
    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:00"
        android:textColor="@color/red_accent"
        android:textSize="80sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <!-- Selector de Tiempo -->
    <LinearLayout
        android:id="@+id/timeSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5min"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="5 MIN"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:backgroundTint="@color/gray_box"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn10min"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="10 MIN"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:backgroundTint="@color/gray_box"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn15min"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:text="15 MIN"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:backgroundTint="@color/red_accent"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <!-- Botones de Control -->
    <LinearLayout
        android:id="@+id/controlButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Play/Pause -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnPlayPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:src="@android:drawable/ic_media_play"
            app:tint="@color/white"
            app:fabSize="normal"
            app:backgroundTint="@color/red_accent"
            android:contentDescription="Play/Pause" />

        <!-- Botón Reset -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/white"
            app:fabSize="normal"
            app:backgroundTint="@color/gray_box"
            android:contentDescription="Reset" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>