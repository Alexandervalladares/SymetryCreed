<resources>

    <!-- DatePicker Theme -->
    <style name="DatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/red_accent</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/gray_box</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="materialCalendarHeaderConfirmButton">@style/DatePickerButton</item>
        <item name="materialCalendarHeaderCancelButton">@style/DatePickerButton</item>
    </style>

    <style name="DatePickerButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/red_accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Tarjeta base -->
    <style name="FitnessOptionCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/gray_box</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/red_accent</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">20dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="FitnessOptionTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <style name="FitnessOptionSubtitle">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- Input Material lleno, esquinas 16, trazo al enfocar -->
    <style name="FilledInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/input_bg_dark</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">@color/red_accent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/hint</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="hintEnabled">true</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">28dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Card base del dashboard -->
    <style name="DashboardCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/gray_box</item>
        <item name="cardCornerRadius">14dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">14dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <!-- Bottom bar visual -->
    <style name="BottomItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/red_accent</item>
    </style>

    <style name="BottomLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#CFCFCF</item>
    </style>

</resources>